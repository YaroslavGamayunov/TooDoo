<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/collapsed"
        motion:constraintSetStart="@id/expanded"
        motion:duration="500">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/nestedScrollView"
            motion:touchAnchorSide="top" />

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="00"
                motion:framePosition="30"
                motion:motionTarget="@+id/completedTasksTextView" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="70"
                motion:motionTarget="@+id/divider" />
            <KeyPosition
                motion:framePosition="40"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@+id/textView"
                motion:percentX="1.909"
                motion:percentY="-1.26" />
            <KeyPosition
                motion:framePosition="50"
                motion:keyPositionType="deltaRelative"
                motion:motionTarget="@+id/completedTasksTextView"
                motion:percentX="-8.654"
                motion:percentY="0.128" />
            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="12"
                motion:motionTarget="@+id/textView" />
            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="90"
                motion:motionTarget="@+id/textView" />
            <KeyAttribute
                motion:motionTarget="@+id/separator"
                motion:framePosition="78"
                android:alpha="0" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toTopOf="@id/completedTasksTextView"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="32" />
        </Constraint>
        <Constraint
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:alpha="0"
            motion:layout_constraintBottom_toTopOf="@id/toolbarGuideline"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/completedTasksTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            motion:layout_constraintBottom_toTopOf="@id/toolbarGuideline"
            motion:layout_constraintEnd_toStartOf="@+id/visibilitySwitchImageView"
            motion:layout_constraintStart_toStartOf="@+id/textView" />
        <Constraint
            android:id="@+id/visibilitySwitchImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            motion:layout_constraintBottom_toBottomOf="@+id/completedTasksTextView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/completedTasksTextView" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@+id/toolbarGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintGuide_begin="?attr/actionBarSize" />
        <Constraint
            android:id="@+id/completedTasksTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:alpha="1"
            android:visibility="gone"
            motion:layout_constraintBottom_toTopOf="@id/toolbarGuideline"
            motion:layout_constraintEnd_toStartOf="@+id/visibilitySwitchImageView"
            motion:layout_constraintStart_toStartOf="@+id/textView" />
        <Constraint
            android:id="@id/visibilitySwitchImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            motion:layout_constraintBottom_toBottomOf="@+id/textView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/textView" />
        <Constraint
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            motion:layout_constraintBottom_toTopOf="@id/completedTasksTextView"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="20" />
        </Constraint>
        <Constraint
            android:id="@id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:alpha="0"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/separator"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="1dp"
            motion:layout_constraintBottom_toTopOf="@id/toolbarGuideline"
            android:alpha="1"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>